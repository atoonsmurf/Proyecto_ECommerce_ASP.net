<h2>Carrito</h2>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

<div id="todo">

    @Html.ActionLink("Ir a Tienda", "TiendaVirtual", new { nombre = "" }, new { @class = "btn btn-warning" }) |

    @Html.ActionLink("Ir a Comprar", "Comprar", null, new { @class = "btn btn-success" })

</div>

<br />

<br />

<style>
    .img-producto {
        width: 150px;
        height: 150px;
    }

    .img {
        position: relative;
        left: 600px;
        top: -300px;
    }


    .texto {
        font-size: 14px;
    }

    .producto span {
        color: crimson;
        font-size: 15px;
    }

    i {
        margin: 2px;
    }

    #todo a, #todo button, #todo input, #todo em {
        font-size: 15px;
    }
</style>

<table class="table texto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>

            <!--Insertar form para ejecutar el actualizar-->
            <
                @using (Html.BeginForm("Actualizar", "ProyectoECommerce", FormMethod.Post))
                {
                    @Html.Hidden("codigo", item.codigo)
                    <td class="texto">
                        @Html.TextBox("q", item.cantidad, new { type = "number" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.monto)
                    </td>
                    <td class="texto">



                        <input type="submit" value="✓" class="bi bi-pencil-square btn btn-info texto" /> |

                        @Html.ActionLink(" ", "Delete", new { codigo = item.codigo }, new { onclick = "return confirm('Desea eliminar?');", @class = "bi bi-trash btn btn-danger" })

                    </td>
               
            }
        </tr>
    }
    <tr>
        <td colspan="4">Total de carrito de compras :</td>

        <td>@Model.Sum(i => i.monto) </td>
    </tr>
</table>


<!--Scripts-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/jquery-3.2.1.js"></script>
    <script src="~/js/jquery.cycle.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="~/js/Productos.js"></script>
}