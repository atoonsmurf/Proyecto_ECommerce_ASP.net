@model ProyectoMundoTronic.Models.OrdenPedido

@{
    ViewBag.Title = "Comprar";
}
<!--Desactivar nav-->
<style>
    .navbar-fixed-top {
        display: none;
        visibility: hidden;
        height: 1px;
    }

        .navbar-fixed-top .container .collapse li a {
            color: black;
        }
</style>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<link href="~/css/estiloProductos.css" rel="stylesheet" type="text/css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>



<!--Navegador-->



<div class="scroll-up-btn">
    <i class="dedo fas fa-hand-point-up"></i>
</div>

<header>
    <div id="baner" style="max-width: 100%; min-width: 100%; margin:20px 0;">
        <img src="~/logo/banner1.jpg" alt="" />
        <img src="~/logo/banner2.jpg" alt="" />
        <img src="~/logo/banner3.jpg" alt="" />
        <img src="~/logo/banner4.jpg" alt="" />
    </div>
</header>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">


            <li class="nav-item active">

                <a class=" xd nav-link" href="#">
                    <span class=""><i class="icon fas fa-images"></i></span>Catálogo
                </a>
            </li>

            <li class="nav-item active">
                <a class="xd nav-link" href="/conocenos">
                    <span>
                        <i class="icon fas fa-users"></i>
                    </span>Conócenos
                </a>
            </li>


            <li class="nav-item dropdown">
                <a style="color: white;" class=" xd nav-link dropdown-toggle" href="#" aria-haspopup="true" id="navbarDropdown" aria-expanded="false" data-toggle="dropdown">
                    <span class=""><i class="icon fas fa-cogs"></i></span>Mantenimientos
                </a>

                <div style="margin-left: 60px;margin-top: 5px;" class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/cargarProd">Productos</a>
                    <a class="dropdown-item" href="/cargarAdmi">Administrador</a>
                    <a class="dropdown-item" href="/cargarCli">Cliente</a>

                </div>
            </li>

        </ul>
    </div>
</nav>
<div style="text-align:center;">
    <h1>Comprar producto</h1>
    <h2>Datos cliente</h2>
</div>
<hr />
<style>
    .img-producto {
        width: 150px;
        height: 150px;
    }

    .img {
        position: relative;
        left: 600px;
        top: -300px;
    }


    .texto, .texto input {
        font-size: 16px;
    }

    .producto span {
        color: crimson;
        font-size: 15px;
    }

    i {
        margin: 2px;
    }

    #todo a, #todo button, #todo input, #todo em {
        font-size: 15px;
    }
</style>
<div style="width:100%;display:flex; align-content:center; justify-content:center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal texto">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group texto">
                @Html.LabelFor(model => model.cliente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group texto">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group texto">
                @Html.LabelFor(model => model.fono, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 texto">
                    @Html.EditorFor(model => model.fono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Comprar" class=" btn btn-default texto" /> <i class="bi bi-credit-card"></i> |
                    @Html.ActionLink("Ir a Tienda", "TiendaVirtual", new { nombre = "" }, new { @class = "btn btn-warning texto" })



                </div>
            </div>
        </div>
    }
</div>

<!-- Alerta -->
<div class="alert alert-danger  alert-dismissible show" role="alert">
    <strong style="font-size:14px; text-align:center">@ViewBag.mensaje</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span style="font-size:14px;" aria-hidden="true">&times;</span>
    </button>
</div>



<!--Scripts-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/jquery-3.2.1.js"></script>
    <script src="~/js/jquery.cycle.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="~/js/Productos.js"></script>
}

