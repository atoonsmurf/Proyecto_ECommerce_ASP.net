        <span style="font-size:14px;" aria-hidden="true">&times;</span>
    </button>
</div>
<div>
    @Html.Partial("_VistaCliente", ViewBag.clientes as IEnumerable<ProyectoMundoTronic.Models.Cliente>)
</div>

