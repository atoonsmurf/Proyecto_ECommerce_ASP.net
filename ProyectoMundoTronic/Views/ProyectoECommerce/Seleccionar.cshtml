@model ProyectoMundoTronic.Models.Producto

@{
    ViewBag.Title = "Seleccionar";
}
<!--Desactivar nav-->
<style>
    .navbar-fixed-top {
        display: none;
        visibility: hidden;
        height: 1px;
    }

        .navbar-fixed-top .container .collapse li a {
            color: black;
        }
</style>



<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<link href="~/css/estiloProductos.css" rel="stylesheet" type="text/css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>



<!--Navegador-->



<div class="scroll-up-btn">
    <i class="dedo fas fa-hand-point-up"></i>
</div>

<header>
    <div id="baner" style="max-width: 100%; min-width: 100%; margin:20px 0;">
        <img src="~/logo/banner1.jpg" alt="" />
        <img src="~/logo/banner2.jpg" alt="" />
        <img src="~/logo/banner3.jpg" alt="" />
        <img src="~/logo/banner4.jpg" alt="" />
    </div>
</header>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">


            <li class="nav-item active">

                <a class=" xd nav-link" href="#">
                    <span class=""><i class="icon fas fa-images"></i></span>Catálogo
                </a>
            </li>

            <li class="nav-item active">
                <a class="xd nav-link" href="/conocenos">
                    <span>
                        <i class="icon fas fa-users"></i>
                    </span>Conócenos
                </a>
            </li>


            <li class="nav-item dropdown">
                <a style="color: white;" class=" xd nav-link dropdown-toggle" href="#" aria-haspopup="true" id="navbarDropdown" aria-expanded="false" data-toggle="dropdown">
                    <span class=""><i class="icon fas fa-cogs"></i></span>Mantenimientos
                </a>

                <div style="margin-left: 60px;margin-top: 5px;" class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/cargarProd">Productos</a>
                    <a class="dropdown-item" href="/cargarAdmi">Administrador</a>
                    <a class="dropdown-item" href="/cargarCli">Cliente</a>

                </div>
            </li>

        </ul>
    </div>
</nav>




<style>
    .img-producto {
        width: 150px;
        height: 150px;
    }

    .img {
        position: relative;
        left: 600px;
        top: -300px;
    }


    .texto {
        font-size: 13px;
    }

    .producto span {
        color: crimson;
        font-size: 15px;
    }

    i {
        margin: 2px;
    }

    #todo a, #todo button, #todo input, #todo em {
        font-size: 15px;
    }
</style>
<div class="texto">
    <h3>Producto seleccionado : </h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codpro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codpro)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

    </dl>
</div>
<div id="todo" style="margin:30px 0">
    @using (Html.BeginForm())
    {

        @Html.Hidden("codigo", Model.codpro);
       
        <div style="margin-left:120px">
            <em style="margin-right:8px">Ingrese la cantidad : </em>
            @Html.TextBox("cantidad", 1, new { type = "number" })
        </div>
        <br />
        <div style="margin:10px 0">
            <input type="submit" value="Agregar" class="btn btn-success" disabled="@ViewBag.d" /> |
            @Html.ActionLink("Ir a la tienda", "TiendaVirtual", new { nombre = "" }, new { @class = "btn btn-warning" })
        </div>
    }
</div>

<br />

<!-- Alerta -->
<div class="alert alert-success  alert-dismissible show" role="alert">
    <strong style="font-size:14px; text-align:center">@ViewBag.mensaje</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span style="font-size:14px;"aria-hidden="true">&times;</span>
    </button>
</div>



<div class="img">
    <img src="@Url.Content(String.Format("~/ImgProd/{0}.jpg", Model.codpro))" class="img-producto" />
</div>

<!--Scripts-->
@section Scripts {
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/jquery-3.2.1.js"></script>
    <script src="~/js/jquery.cycle.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="~/js/Productos.js"></script>
}
