@model IEnumerable<ProyectoMundoTronic.Models.Producto>

<!--Desactivar nav-->
<style>
    .navbar-fixed-top {
        display: none;
        visibility: hidden;
        height: 1px;
    }

        .navbar-fixed-top .container .collapse li a {
            color: black;
        }
</style>



<style>
    .img-producto {
        width: 180px;
        height: 180px;
        text-align: center
    }

    .buscar {
        text-align: right;
    }

    .contenedor {
        display: inline-flex;
        flex-direction: row;
        width: 30%;
        justify-content: center;
        align-content: center;
        border-radius: 20px;
        margin: 15px 15px;
        text-align: center;
    }

    .producto {
        margin: 10px 10px;
    }

    .texto, .texto input {
        font-size: 15px;
    }

    .producto span {
        color: crimson;
        font-size: 15px;
    }

    i {
        margin: 2px;
    }

    #todo a, #todo button {
        font-size: 15px;
    }
</style>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<link href="~/css/estiloProductos.css" rel="stylesheet" type="text/css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>


<table class="table text-center ">
    <tr>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.codpro)
        </th>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th class="text-center texto">
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td >
                <img src="@Url.Content(String.Format("~/ImgProd/{0}.jpg", item.codpro))" class="img-producto" width="80px" />
            </td>
            <td class="texto">
                @Html.DisplayFor(modelItem => item.nombre)
            </td >
            <td class="texto">
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td class="texto">
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td class="texto">
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td texto>
            </td>
            <td clasS="texto">
                @Html.ActionLink(" Seleccionar", "MantenimientoProd", new { cod = item.codpro }, new { @class= " btn btn-default bi bi-check2-square" })
               
            </td>
        </tr>
    }

</table>
<!--Scripts-->
@section Scripts {
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/jquery-3.2.1.js"></script>
    <script src="~/js/jquery.cycle.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
    <script src="~/js/Productos.js"></script>
}

